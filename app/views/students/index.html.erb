<div class="row">
	<div class="col s12">
	  <h3 class="center-align">Student Listing</h3>
	</div>
</div>
<div class="row">
	<%  @students.each do |c| %>
	<div class="col s6 m6">
	  <div class="card blue-grey darken-1">
	    <div class="card-content white-text">
        <span class="card-title"><%= c.name %> </span>
	    <p><%= c.email %></p>
	    </div>
	    <div class="card-action">
	      <a href="#">View Profile</a>
	    </div>
	  </div>
	</div>
	<%end%>
</div>